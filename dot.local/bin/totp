#!/bin/bash

set -eE -u -o pipefail

: "${TOTP_SECRET:=${1:-}}"
[[ -n $TOTP_SECRET ]] || { echo >&2 "Please provide secret"; exit 1; }

if [[ -n $(command -v oathtool) ]]; then
    oathtool --totp -b - <<< "$TOTP_SECRET"
    exit 0
fi

export TOTP_SECRET
perl -MDigest::SHA=hmac_sha1 -Mbytes <<'PERL'
my %rev = (
    A => 0,  B => 1,  C => 2,  D => 3,  E => 4,  F => 5,  G => 6,  H => 7,
    I => 8,  J => 9,  K =>10,  L =>11,  M =>12,  N =>13,  O =>14,  P =>15,
    Q =>16,  R =>17,  S =>18,  T =>19,  U =>20,  V =>21,  W =>22,  X =>23,
    Y =>24,  Z =>25,  2 =>26,  3 =>27,  4 =>28,  5 =>29,  6 =>30,  7 =>31,
);
my $secret = uc($ENV{TOTP_SECRET});
$secret =~ tr/A-Z2-7//cd;
$secret =~ s/(.)/sprintf("%05b", $rev{$1})/ge;
$secret = pack("B*", $secret);
my $msg = pack("Q>", int(time() / 30));
my $hmac = hmac_sha1($msg, $secret);
my $offset = ord(substr($hmac, -1)) & 0x0f;
printf "%06d\n", (unpack("N", substr($hmac, $offset, 4)) & 0x7fffffff) % 1000000;
PERL
