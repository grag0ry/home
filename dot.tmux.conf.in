# enable window titles
set -g set-titles on

set -g mouse on
set -g base-index 1

# window title string (uses statusbar variables)
# set -g set-titles-string '#S / #W / #T'
set -g set-titles-string '#T'
set-window-option -g allow-rename on
set-window-option -g automatic-rename on

set -g status-bg black
set -g status-fg white

set -g status-left '#[bg=brightgreen]#[fg=black] #S #{?#{==:#{active_window_index},1},#[bg=blue],#[bg=black]}#[fg=brightgreen]'

set -g status-left-length 50
set -g status-right '#[bg=black]#[fg=brightgreen]#[bg=brightgreen]#[fg=black]%d.%m.%Y %H:%M '
set -g window-status-format ' #I:#P #W#{?window_zoomed_flag, 󰘖,}#{?#{==:#{e|+|:#I,1},#{active_window_index}}, #[bg=blue]#[fg=black],#[bg=black]#[fg=white] }'
set -g window-status-current-format ' #I:#P #W#{?window_zoomed_flag, 󰘖,} #[bg=black]#[fg=blue]'
setw -g window-status-current-style bg=blue,fg=black
set -g window-status-separator ""

# pane border colors
set -g pane-active-border-style fg=blue
set -g pane-border-style fg=white

bind-key -r < resize-pane -L 3
bind-key -r > resize-pane -R 3
bind-key -r + resize-pane -U 1
bind-key -r = resize-pane -D 1

bind-key % split-window -h -c '#{pane_current_path}'
bind-key '"' split-window -c '#{pane_current_path}'

unbind C-Right
unbind C-Left
unbind C-Down
unbind C-Up

# Bind to reload config
bind r source-file ~/.tmux.conf

setenv -g SSH_AUTH_SOCK $SSH_AUTH_SOCK
bind-key o send-keys 'eval "export $(tmux show-environment SSH_AUTH_SOCK)"' C-m

m4_ifdef(`m4_CFG_LEMONADE',
set -s copy-command 'lemonade copy'
set -s set-clipboard off
)
