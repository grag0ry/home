[user]
    email = gragory.mail@gmail.com
    name = Gregory Kudrenko

[color]
    ui = auto

[alias]
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    tree = log --graph --oneline --all

[core]
    excludesFile = ~/.gitignore
    pager = delta

[interactive]
    diffFilter = delta --color-only

[merge]
    conflictStyle = zdiff3

[include]
    path = "M4_CFG_HOME()/.gitconfig-private"
    path = "M4_CFG_HOME()/.config/delta/config"

# vim: filetype=gitconfig
