# Moonfly theme for delta
# Upstream palette: github.com/bluz71/vim-moonfly-colors

[delta]
syntax-theme = none
syntax-highlight = true
navigate = true
dark = true
line-numbers = true
side-by-side = false
hyperlinks = false
keep-plus-minus-markers = false
decorations = true

# UI ELEMENTS

# File headers
file-style = "bold #80a0ff"
file-decoration-style = "#2e2e2e"

# Hunk headers
hunk-header-style = "bold #cf87e8"
hunk-header-decoration-style = "#2e2e2e"

# Commit headers
commit-style = "bold #79dac8"
commit-decoration-style = "#2e2e2e"

# DIFF COLORS (Moonfly-accurate)

# Additions (DiffAdd = #314940)
plus-style = "syntax #314940"
plus-non-emph-style = "syntax #314940"
plus-emph-style = "syntax #4d5d8d"

# Deletions (DiffDelete = #2e2e2e, fg=#626262)
minus-style = "syntax #2e2e2e"
minus-non-emph-style = "syntax #2e2e2e"
minus-emph-style = "syntax #4d5d8d"

# Modified text (DiffText = #4d5d8d)
# Used for inline diff emphasis
emph-style = "bold #4d5d8d"

# LINE NUMBERS

line-numbers-left-style = "#626262"
line-numbers-right-style = "#626262"

line-numbers-minus-style = "#ff5d5d"
line-numbers-plus-style = "#36c692"

# SYNTAX COLORS (bat theme integration)
syntax-theme = "Moonfly"

# WHITESPACE

# Highlight whitespace errors like Neovim's SpellBad
whitespace-error-style = "reverse #ff5d5d"

# Optional: highlight tabs/spaces in diffs
whitespace-style = "underline #444444"

# DECORATIONS

# Vertical bars for side-by-side or inline decorations
decorations = true
decorations-style = "#444444"

# Box around changed blocks (optional)
# Uncomment if you want a more "IDE-like" look
# box-style = "#3a3a3a"
