source "m4_HOMEDIR()/.config/bash/env.d/"*.bash
source "m4_HOMEDIR()/.config/bash/bashrc.bash"
m4_ifdef(`m4_WSL', `source "m4_HOMEDIR()/.config/bash/wsl.profile.bash"')


if [[ -z $SSH_CONNECTION ]]; then
    pgrep -u $USER gpg-agent > /dev/null || eval "$(/usr/bin/gpg-agent --daemon)"
    export SSH_AUTH_SOCK=$(gpgconf --list-dirs agent-ssh-socket)
    export GPG_TTY=$(tty)
fi
