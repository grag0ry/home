export HISTFILESIZE=5000
export HISTIGNORE="history:pwd"
export PROMPT_DIRTRIM=3

export PATH="m4_CFG_HOME()/.local/bin:$PATH"

m4_ifdef(`m4_CFG_NVIM',
export EDITOR='nvim'
export MANPAGER='nvim +Man!'
,
export EDITOR='vi'
)

m4_ifdef(`m4_CFG_SET_NERDFONTS',`export NERDFONTS=1')

export WINEDLLOVERRIDES='winemenubuilder.exe=d'
export RIPGREP_CONFIG_PATH="m4_CFG_HOME()/.config/ripgrep/config"
export FZF_DEFAULT_OPTS="$FZF_DEFAULT_OPTS --height 40% --tmux"

source "$(dirname "${BASH_SOURCE[0]}")/colors.bash"
